{
  "name": "pro-shop",
  "version": "1.0.0",
  "description": "MERN shopping cart app",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "test": "SET NODE_ENV=testing& mocha backend/test --recursive --exit --timeout 10000",
    "start": "node backend/server",
    "server": "nodemon backend/server",
    "client": "npm start --prefix frontend",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "data:import": "node backend/seeder -i",
    "data:destroy": "node backend/seeder -d",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix frontend && npm run build --prefix frontend"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mohammedbakr/pro-shop.git"
  },
  "keywords": [],
  "author": "Mohamed Bakr",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mohammedbakr/pro-shop/issues"
  },
  "homepage": "https://github.com/mohammedbakr/pro-shop#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-async-handler": "^1.1.4",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.13.6",
    "multer": "^1.4.3"
  },
  "devDependencies": {
    "chai": "^4.3.4",
    "concurrently": "^6.2.1",
    "mocha": "^9.1.2",
    "nodemon": "^2.0.12",
    "supertest": "^6.1.6"
  }
}
